<div class="container">
  <div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 400px;">
      <h4 class="card-title mt-3 text-center">Update Cisco API credentials</h4>
      <%= form_for @auth_record, url: set_auth_dashboard_index_path , method: :put, html: {class: "nifty_form"} do |f| %>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> API Client </span>
          </div>
           <%= f.text_field :api_client, placeholder: "API CLIENT", class: 'form-control'%>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> API Key </span>
          </div>
           <%= f.text_field :api_key, placeholder: "API KEY", class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.submit "Update", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </article>
  </div>
</div>
