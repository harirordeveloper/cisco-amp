  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="vulnarabilities">
    <hr class="my-4">
    <div class="card-columns">
      <%= render partial: 'vulnarability', collection: @computer.vulnarabilities, as: :vulnerability %>
    </div>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="user-activities">
    <% if @computer.user_activities.present? %>
     <div class="card-columns">
