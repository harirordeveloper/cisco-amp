<ul class="nav nav-pills mb-3" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="vulnarabilities" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Vulanarabilities (<span class="badge"><%= @computer.vulnarabilities.count %></span>)</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="user-activities" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">User Activities (<span class="badge"><%= @computer.user_activities.count %></span>)</a>
  </li>
</ul>
